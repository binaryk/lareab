

<?php $__env->startSection('title'); ?> 
	<?php if($mode == 'create'): ?>
		<p>Adauga utilizator</p>    
	<?php else: ?>
    	<p>Modifica date utilizator</p>
    <?php endif; ?>
<?php $__env->stopSection(); ?>

<?php /* Content */ ?>
<?php $__env->startSection('content'); ?>
<div class="row">
<div class="col-lg-12">
	<?php /* Create User Form */ ?>
	<form class="form" method="post" action="<?php if(isset($user)): ?><?php echo URL::to('admin/users/' . $user->id . '/edit'); ?><?php endif; ?>" autocomplete="off">
		<!-- CSRF Token -->
		<input type="hidden" name="_token" value="<?php echo e(csrf_token()); ?>" />
		<!-- ./ csrf token -->

        <?php if(Session::has('error')): ?>
            <p class="alert alert-danger"><?php echo Session::get('error'); ?></p>
        <?php elseif(Session::has('success')): ?>
            <p class="alert alert-success"><?php echo Session::get('success'); ?></p>
        <?php endif; ?>

		<div class="col-md-12">
        	<?php echo Form::textField('Nume si prenume utilizator', 'full_name', Input::old('full_name', isset($user) ? $user->full_name : null)); ?>                    
        </div>       
		<div class="col-md-6">
        	<?php echo Form::textField('Nume utilizator', 'username', Input::old('username', isset($user) ? $user->username : null)); ?>                    
        </div>       
		<div class="col-md-6">
        	<?php echo Form::textField('Email', 'email', Input::old('email', isset($user) ? $user->email : null)); ?>                    
        </div>
		<div class="col-md-6">
        	<?php echo Form::passwordField('Parola', 'password'); ?>                    
        </div>
		<div class="col-md-6">
        	<?php echo Form::passwordField('Confirmare parola', 'password_confirmation'); ?>                    
        </div>


		<!-- Activation Status -->
		<div class="form-group col-md-12 <?php echo e($errors->has('activated') || $errors->has('confirm') ? 'error' : ''); ?>">
			<label class="control-label" for="confirm">Utilizator activ?</label>
			<div>
				<?php if($mode == 'create'): ?>
					<select class="form-control" name="confirm" id="confirm">
						<option value="1"<?php echo e((Input::old('confirm', 0) === 1 ? ' selected="selected"' : '')); ?>>Da</option>
						<option value="0"<?php echo e((Input::old('confirm', 0) === 0 ? ' selected="selected"' : '')); ?>>Nu</option>
					</select>
				<?php else: ?>
					<select class="form-control" <?php echo e(($user->id === Confide::user()->id ? ' disabled="disabled"' : '')); ?> name="confirm" id="confirm">
						<option value="1"<?php echo e(($user->confirmed ? ' selected="selected"' : '')); ?>>Da</option>
						<option value="0"<?php echo e(( ! $user->confirmed ? ' selected="selected"' : '')); ?>>Nu</option>
					</select>
				<?php endif; ?>
				<?php echo $errors->first('confirm', '<span class="help-inline">:message</span>'); ?>

			</div>
		</div>
		<!-- ./ activation status -->

		<!-- Groups -->
		<div class="form-group col-md-6 <?php echo e($errors->has('roles') ? 'error' : ''); ?>">
            <label class="control-label" for="roles">Grupuri de utilizatori</label>
            <div class="">
                <select class="form-control" name="roles[]" id="roles[]" multiple>
                    <?php foreach($roles as $role): ?>
						<?php if($mode == 'create'): ?>
                    		<option value="<?php echo e($role->id); ?>"<?php echo e(( in_array($role->id, $selectedRoles) ? ' selected="selected"' : '')); ?>><?php echo e($role->name); ?></option>
                    	<?php else: ?>
							<option value="<?php echo e($role->id); ?>"<?php echo e(( array_search($role->id, $user->currentRoleIds()) !== false && array_search($role->id, $user->currentRoleIds()) >= 0 ? ' selected="selected"' : '')); ?>><?php echo e($role->name); ?></option>
						<?php endif; ?>
                    <?php endforeach; ?>
				</select>

				<span class="help-block">
					Selectionati grupurile din care face parte utilizatorul curent. Accesul la resursele aplicatiei va fi restrictionat prin intermediul acestor grupuri.
				</span>
        	</div>
		</div>
		<!-- ./ groups -->
	
        <div class="col-md-12 center"> 
            <input type="submit" name="btn_submit" class="btn btn-primary btn-lg button-width" value="Salveaza" />
            <a href="<?php echo URL::to('admin/users/list'); ?>">
                <input type="button" id="back" class="btn btn-warning btn-lg button-width" value="Inapoi" />
            </a>                         
        </div>
	</form>
	</div>
</div>
<?php $__env->stopSection(); ?>

