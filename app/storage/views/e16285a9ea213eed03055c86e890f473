    <?php echo HTML::script('assets/js/cnp.js'); ?>

    <script>
        $(document).ready(function(){
        });
  
        $('#cnp,#nume,#entitate').bind("change keyup input",(function(){
            if (verifica_cnp($('#cnp').val()))
            {
                $("#submit").removeAttr("disabled");
            } else {
